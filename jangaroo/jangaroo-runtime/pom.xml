<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jangaroo-runtime</artifactId>
  <packaging>jar</packaging>
  <dependencies>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-compiler</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>
  <parent>
    <groupId>net.jangaroo</groupId>
    <artifactId>jangaroo-parent</artifactId>
    <version>3-preview-1</version>
    <relativePath>../../jangaroo-parent/pom.xml</relativePath>
  </parent>
  <name>Joo Runtime</name>
  <build>
    <resources>
      <resource>
        <directory>src/main/joo-js</directory>
        <targetPath>META-INF/resources</targetPath>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile-joo-runtime</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>generate-resources</phase>
            <configuration>
              <target>
                <property name="runtime.classpath" refid="maven.compile.classpath" />
                <taskdef classname="net.jangaroo.jooc.ant.JoocTask" classpath="${project.build.outputDirectory};${runtime.classpath}" name="jooc" />
                <mkdir dir="${project.build.outputDirectory}/META-INF/resources/amd/as3" />
                <mkdir dir="${project.build.outputDirectory}/META-INF/joo-api" />
                <jooc apidestdir="${project.build.outputDirectory}/META-INF/joo-api" debuglevel="source" destdir="${project.build.outputDirectory}/META-INF/resources/amd/as3" enableassertions="true" failonerror="true" verbose="true">
                  <include name="**/*.as" />
                  <src path="src/main/joo" />
                </jooc>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>compress</goal>
            </goals>
            <configuration>
              <nosuffix>true</nosuffix>
              <jswarn>false</jswarn>
              <sourceDirectory>${project.build.outputDirectory}</sourceDirectory>
              <includes>
                <include>META-INF/resources/amd/*/**/*.js</include>
              </includes>
              <excludes>
                <exclude>META-INF/resources/amd/lib/**</exclude>
              </excludes>
              <outputDirectory>${project.build.directory}/js-compress</outputDirectory>
              <aggregations>
                <aggregation>
                  <insertNewLine>true</insertNewLine>
                  <output>${project.build.outputDirectory}/META-INF/resources/amd/lib/net/jangaroo/jangaroo-runtime.lib.js</output>
                  <inputDir>${project.build.directory}/js-compress</inputDir>
                  <includes>
                    <include>**/*.js</include>
                  </includes>
                </aggregation>
              </aggregations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>


<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>jangaroo-runtime</artifactId>
  <packaging>jar</packaging>
  <dependencies>
    <dependency>
      <groupId>net.jangaroo</groupId>
      <artifactId>jangaroo-compiler</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>net.jangaroo.com.sencha</groupId>
      <artifactId>ext-js</artifactId>
      <type>pkg</type>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <parent>
    <groupId>net.jangaroo</groupId>
    <artifactId>jangaroo-parent</artifactId>
    <version>4.0.1</version>
    <relativePath>../../jangaroo-parent/pom.xml</relativePath>
  </parent>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>compile-joo-runtime</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <target>
                <property name="runtime.classpath" refid="maven.compile.classpath" />
                <taskdef classname="net.jangaroo.jooc.ant.JoocTask" classpath="target/classes;${runtime.classpath}" name="jooc" />
                <mkdir dir="target/classes/META-INF/resources/joo/classes" />
                <mkdir dir="target/classes/META-INF/joo-api" />
                <jooc apidestdir="target/classes/META-INF/joo-api" debuglevel="source" destdir="target/classes/META-INF/resources/joo/classes" enableassertions="true" failonerror="true" verbose="true">
                  <include name="**/*.as" />
                  <src path="src/main/joo" />
                </jooc>
                <mkdir dir="target/temp" />
                <jooc destdir="target/temp" enableassertions="false" failonerror="true" verbose="true">
                  <include name="**/*.as" />
                  <src path="src/main/joo" />
                </jooc>
                <concat destfile="target/classes/META-INF/resources/joo/net.jangaroo.jangaroo-runtime.classes.js">
                  <filelist dir="src/main/joo-js/joo/classes">
                    <file name="int.js" />
                    <file name="uint.js" />
                    <file name="E4X.js" />
                    <file name="Vector.js" />
                    <file name="joo/BootstrapClassLoader.js" />
                    <file name="joo/assert.js" />
                    <file name="joo/Class.js" />
                    <file name="joo/trace.js" />
                  </filelist>
                  <filelist dir="target/temp/">
                    <file name="joo/MemberDeclaration.js" />
                    <file name="joo/NativeClassDeclaration.js" />
                    <file name="joo/JooClassDeclaration.js" />
                    <file name="joo/SystemClassLoader.js" />
                    <file name="ArgumentError.js" />
                    <file name="DefinitionError.js" />
                    <file name="SecurityError.js" />
                    <file name="Array.js" />
                    <file name="Date.js" />
                    <file name="joo/StandardClassLoader.js" />
                    <file name="joo/DynamicClassLoader.js" />
                    <file name="joo/ResourceBundleAwareClassLoader.js" />
                  </filelist>
                  <filelist dir="src/main/joo-js/joo/classes">
                    <file name="joo/_createClassLoader.js" />
                  </filelist>
                </concat>
                <copy todir="target/classes/META-INF/resources">
                  <fileset dir="src/main/joo-js" />
                </copy>
                <!-- sencha package -->
                <property name="maven.project.version" value="${project.version}"/>
                <loadresource property="sencha.package.version">
                  <propertyresource name="maven.project.version"/>
                  <filterchain>
                    <tokenfilter>
                      <filetokenizer/>
                      <replaceregex pattern="([0-9\.]+)(-?.*)" replace="\1"/>
                    </tokenfilter>
                  </filterchain>
                </loadresource>
                <mkdir dir="target/workspace" />
                <copy todir="target/workspace">
                  <fileset dir="src/main/sencha" />
                  <filterset>
                    <filter token="PROJECT_VERSION" value="${sencha.package.version}"/>
                  </filterset>
                </copy>
                <mkdir dir="target/workspace/packages/local/package/resources/joo" />
                <copy todir="target/workspace/packages/local/package/resources/joo">
                  <filelist dir="target/classes/META-INF/resources/joo">
                    <file name="jangaroo-runtime.module.js" />
                    <file name="AS3.js" />
                  </filelist>
                </copy>
                <mkdir dir="target/workspace/packages/local/package/src" />
                <copy todir="target/workspace/packages/local/package/src">
                  <fileset dir="target/classes/META-INF/resources/joo/classes"/>
                </copy>
                <mkdir dir="target/workspace/packages/local/package/overrides" />
                <copy todir="target/workspace/packages/local/package/overrides">
                  <fileset dir="target/classes/META-INF/resources/joo/overrides"/>
                </copy>
                <exec executable="sencha"
                      dir="target/workspace/packages/local/package"><!-- execute sencha package build -->
                  <arg value="package" />
                  <arg value="build" />
                </exec>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-pkg</id>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/workspace/packages/local/package/build/${project.groupId}__${project.artifactId}.pkg</file>
                  <type>pkg</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <includes>
            <include>target/sencha/packages/local/**</include>
          </includes>
        </configuration>
      </plugin>-->
    </plugins>
    <sourceDirectory>src/main/joo</sourceDirectory>
    <testSourceDirectory>src/test/joo</testSourceDirectory>
  </build>
  <!-- Do not use jangaroo plugin here since you can't use AND create a plugin in one multi module project! -->
  <name>Joo Runtime</name>
</project>

